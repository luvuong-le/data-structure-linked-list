{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "target": "es3",
        "lib": [
            "es6"
        ],
        "baseUrl": "./src",
        "paths": {
            "@interfaces/*": [
                "interfaces/*"
            ],
            "@modules/*": [
                "modules/*"
            ],
        }
    },
    "include": [
        "src/**/*",
        "tests",
    ],
    "exclude": [
        "node_modules",
    ]
}